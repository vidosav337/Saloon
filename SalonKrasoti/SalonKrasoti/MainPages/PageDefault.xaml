                   FontSize="20"/>


        <Grid
            Row ="1">
            <DataGrid
            Name="GridServices"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTemplateColumn
                    Header="Список услуг"
                    Width="*"
                    >
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>




        </Grid>

